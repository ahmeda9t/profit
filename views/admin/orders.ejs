<%- include('../layout', { body: '' }) %>

<section class="page-hero">
  <h1 class="page-hero-title">Orders</h1>
  <p class="page-hero-subtitle">Manage customer orders and track their status.</p>
</section>

<div class="card-nike">
  <table class="table table-nike">
    <thead>
      <tr>
        <th>ID</th>
        <th>Customer</th>
        <th>Total</th>
        <th>Payment</th>
        <th>Created</th>
        <th>Status</th>
        <th>Delivery</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(o => { %>
        <tr>
          <td>#<%= o.order_id %></td>
          <td><%= o.customer_username || 'Customer' %></td>
          <td>
            $<%= Number(o.total_amount || 0).toFixed(2) %>
          </td>
          <td><%= o.payment_method || 'Cash on Delivery' %></td>
          <td><%= o.created_at_formatted || o.created_at %></td>
          <td>
            <form method="post" action="/admin/orders/<%= o.order_id %>/status" class="d-flex gap-1">
              <select class="form-select form-select-sm" name="status">
                <option value="Pending"    <%= o.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                <option value="Processing" <%= o.status === 'Processing' ? 'selected' : '' %>>Processing</option>
                <option value="Shipped"    <%= o.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                <option value="Delivered"  <%= o.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
              </select>
              <button class="btn btn-sm btn-dark-nike btn-pill">Save</button>
            </form>
          </td>
          <td>
            <small>
              <strong><%= o.delivery_name || '-' %></strong><br>
              <%= o.delivery_phone || '' %>
            </small>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
