<%- include('../layout', { body: '' }) %>

<section class="page-hero">
  <h1 class="page-hero-title">Shop by Category</h1>
  <p class="page-hero-subtitle">Dial in your fit, from footwear to accessories.</p>
</section>

<section class="mt-3">
  <div class="row g-3">
    <% categories.forEach(c => { %>
      <div class="col-md-6 col-lg-3">
        <a href="/shop/categories/<%= c.category_id %>">
          <div class="card-nike" style="text-align:left; border-radius:18px; min-height:120px;">
            <div style="font-size:0.8rem; text-transform:uppercase; letter-spacing:0.08em; color:#777;">
              Category
            </div>
            <div style="font-size:1.05rem; font-weight:700;"><%= c.name %></div>
            <div style="font-size:0.85rem; color:#555; margin-top:0.3rem;">
              <%= c.product_count %> products
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</section>
