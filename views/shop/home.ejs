<%- include('../layout', { body: '' }) %>

<section class="page-hero">
  <div class="row align-items-center">
    <div class="col-md-7">
      <h1 class="page-hero-title">Move Different.</h1>
      <p class="page-hero-subtitle">
        ProFit brings you performance footwear, apparel, and gear designed to keep up with every sprint, rep, and late-night grind.
      </p>
      <a href="/shop" class="btn btn-dark-nike btn-pill mt-3">Shop All Products</a>
    </div>
    <div class="col-md-5 d-none d-md-block">
      <div style="
          background: linear-gradient(135deg, #111 0%, #333 45%, #f5f5f5 100%);
          border-radius: 24px;
          height: 260px;
          display:flex;
          align-items:center;
          justify-content:center;
          color:#fff;
          font-weight:700;
          letter-spacing:0.08em;
          text-transform:uppercase;
          font-size:0.9rem;
        ">
        <div class="text-center">
          New Season <br> Performance Collection
        </div>
      </div>
    </div>
  </div>
</section>

<section class="mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 style="font-size:1.2rem; text-transform:uppercase; letter-spacing:0.08em;">Featured</h2>
    <a href="/shop" class="btn btn-outline-nike btn-pill">View all</a>
  </div>

  <div class="product-grid">
    <% featured.forEach(p => { %>
      <div class="product-card">
        <div>
          <% if (p.image_url) { %>
            <div class="mb-3">
              <img src="/img/<%= p.image_url %>" alt="<%= p.name %>"
                   style="width:100%; border-radius:16px; object-fit:cover; max-height:220px;">
            </div>
          <% } %>
          <div class="product-tag">Featured</div>
          <div class="product-name"><%= p.name %></div>
          <div class="product-price">$<%= p.unit_price %></div>
        </div>
        <div class="mt-3">
          <form method="post" action="/shop/add">
            <input type="hidden" name="product_id" value="<%= p.product_id %>">
            <div class="input-group">
              <input class="form-control" type="number" name="quantity" value="1" min="1">
              <button class="btn btn-dark-nike btn-pill" type="submit">Add to Cart</button>
            </div>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</section>
